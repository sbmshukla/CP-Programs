// I. Write a program to print sum of 1 to 10 numbers using While Loop.

//Using For Loop
/*#include <stdio.h>
int main(){
    int i=1;
    while(i!=11){
        printf("%d\n",i);
        i++;
    }
    return 0;
}
*/


//Using For Loop
/*
#include<stdio.h>
int main()
{
    int i=10;
    for(int i=1; i<=10; i++)
    {
        printf("%d \n",i);
    }
    return 0;
}
*/

// II. Write a program to print table of a given number using Do-while Loop.
//Using do while loop
/*
#include <stdio.h>
int main()
{
    int i;
    printf("Enter Number: ");
    scanf("%d", &i);
    int num = 1;
    do
    {
        printf("%d * %d = %d\n", i, num, i * num);
        num++;
    } while (num != 11);
    return 0;
}
*/

//using while loop
/*
#include <stdio.h>
int main()
{
    int i;
    printf("Enter Number: ");
    scanf("%d", &i);
    int num = 1;
    while (num != 11)
    {
        printf("%d * %d = %d\n", i, num, i * num);
        num++;
    }
    return 0;
}
*/

//using for loop
/*
#include <stdio.h>
int main()
{
    int i;
    printf("Enter Number: ");
    scanf("%d", &i);
    for (int j = 1; j <=10; j++)
    {
        printf("%d * %d = %d\n", i, j, i * j);
    }
    
    return 0;
}
*/


// III. Write a program to find a factorial of given number.

//Using For Loop
/*
#include <stdio.h>
int main()
{
    int num;
    printf("Enter Number: ");
    scanf("%d", &num);
    int factorial=1;
    for (int i=1;i<=num;i++)
    {
        factorial=factorial*i;
    }   
    printf("%d",factorial);
    return 0;
}
*/


// III. Write a program to find a factorial of given number.

//Using For Loop
/*
#include <stdio.h>
int main()
{
    int num;
    printf("Enter Number: ");
    scanf("%d", &num);
    int factorial=1;
    for (int i=1;i<=num;i++)
    {
        factorial=factorial*i;
    }   
    printf("%d",factorial);
    return 0;
}
*/

/*
V. Write a program to print following pattern.
*
* *
* * *
* * * *
* * * * *
*/

//using for loop
/*
#include <stdio.h>
int main()
{
    for (int i = 1; i <=5; i++)
    {
        for (int j = 1; j <=i; j++)
        {
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}
*/


/*
VI. Write a program to print following pattern.
6 6 6 6 6 6 
5 5 5 5 5 
4 4 4 4
3 3 3
2 2
1
*/

//using for loop
/*
#include <stdio.h>
int main()
{
    for (int i = 6; i >=1; i--)
    {
        for (int j = i; j >=1; j--)
        {
            printf("%d ",i);
        }
        printf("\n");
    }
    return 0;
}
*/

